@model List<Product>

<section id="products" class="products section mt-5">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Products</h2>
        <p>View All Products</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (Product item in Model)
                {
                    <div class="col-lg-4 col-md-6 products-item isotope-item filter-app filter-@item.Category.Photo">
                        <div class="products-content h-100">
                            <a href="@item.Photo" data-gallery="products-gallery-app" class="glightbox"><img src="@item.Photo" class="img-fluid"></a>
                            <div class="products-info">
                                <h4><a href="/Home/CurrentProduct/@item.Id" title="More Details">@item.Name</a></h4>
                                <p>@item.Price LE</p>
                            </div>
                        </div>
                    </div>

                    <!-- End Products Item -->
                }

            </div><!-- End Products Container -->

        </div>

    </div>

</section><!-- /Products Section -->
