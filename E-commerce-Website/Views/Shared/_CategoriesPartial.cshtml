@model List<Category>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


<section id="categories" class="categories section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Categories</h2>
        <p>Show all Categories of Products</p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="row gy-4">

            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="category-item d-flex">
                        <div class="icon flex-shrink-0"><i class="fa-solid @item.Photo"></i></div>
                        <div>
                            <h4 class="title"><a href="/Home/Products/@item.Id" class="stretched-link">@item.Name</a></h4>
                            <p class="description">@item.Description</p>
                        </div>
                    </div>
                </div>
                <!-- End Category Item -->
            }
            @if((bool?)ViewBag.isAdmin == true )
            {
                <a class="btn btn-primary col-12" asp-controller="Categories" asp-action="Index">Control Categories</a>
            }
        </div>

    </div>

</section><!-- /Categories Section -->
