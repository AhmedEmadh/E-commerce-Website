<section id="products" class="products section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Products</h2>
        <p>View All Products</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <ul class="products-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                <li data-filter="*" class="filter-active">All</li>
                @foreach (var item in Model.Categories)
                {
                    <li data-filter="._@item.Id">@item.Name</li>
                }
            </ul><!-- End Products Filters -->

            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var item in Model.Products)
                {
                    <div class="col-lg-4 col-md-6 products-item isotope-item filter-app _@item.Category.Id">
                        <div class="products-content h-100 text-center">
                            <a href="@item.Photo" data-gallery="products-gallery-app" class="glightbox"><img src="@item.Photo" class="img-fluid" style="max-height: 400px;"></a>
                            <div class="products-info">
                                <h4><a href="/Home/CurrentProduct/@item.Id" title="More Details">@item.Name</a></h4>
                                <p>@item.Price LE</p>
                            </div>
                        </div>
                    </div>
                
                    <!-- End Products Item -->
                }

            </div><!-- End Products Container -->

        </div>

    </div>

</section><!-- /Products Section -->